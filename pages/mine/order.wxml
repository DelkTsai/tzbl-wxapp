<import src="../../template/loading" />
<!--pages/mine/order.wxml-->
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar">
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
                <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    <scroll-view class="post-list"
                        enable-back-to-top="true"
                        bindscrolltolower="loadMore"
                        bindscrolltoupper="onRefresh"
                        upper-threshold="0"
                        lower-threshold="20"
                        scroll-y="true">
                      <!--加载更多模版-->
                      <block wx:if="{{hasMore}}">
                        <template is="loading" />
                      </block>
                      <block wx:if="{{blogs.length<1}}">
                        <template is="nodata1" />
                      </block>
                      <block wx:else>
                        <template is="nodata" />
                      </block>
                     </scroll-view>
                </view>
                <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                 <view class="list-group">
                      <navigator url="/pages/mine/detail" class="orderList bg-color-white" hover-class="weui-cell_active" wx:for="{{3}}" wx:for-item="list" wx:key="index" >
                          <view class="orderList-hd ">
                            <text class="font-color-999">2017.12.15 13:15</text>
                            <text class="font-color-999">{{'s2014524578545'}}</text>
                          </view>
                           <view class="orderList-bd ">
                            <text>红牛等1件商品</text>
                            <text >6.50元</text>
                          </view>
                           <view class="orderList-ft ">
                            <text class="font-color-f8b62b" >创业大厦502-扫码</text>
                            <text>微信支付</text>
                          </view>
                          
                            
                      </navigator>
                  </view>
                </view>
               
            </view>
        </view>
    </view>
</view>
